SELECT * FROM albums;

SELECT DISTINCT name FROM albums;

UPDATE albums
SET release_year = 1982
WHERE id = 1;

SELECT * FROM albums;

SELECT * FROM albums
WHERE release_year < 2000;

SELECT * FROM albums
WHERE name LIKE '%er%';

UPDATE albums
SET name = 'Power Slave'
WHERE id = 2;

SELECT * FROM albums;

SELECT * FROM albums
WHERE id = 2 OR release_year = 2010;

SELECT * FROM albums 
WHERE name = 'Nightmare' AND release_year > 2000;

SELECT * FROM albums 
WHERE release_year BETWEEN 2000 AND 2018;

SELECT * FROM albums
WHERE release_year IS NULL;

DELETE FROM albums
WHERE id = 5;

SELECT * FROM albums;

SELECT *
FROM bands
JOIN albums ON bands.id = albums.band_id;

SELECT * FROM bands;

SELECT * FROM albums;

SELECT b.name AS 'Band Name', a.name AS 'Album Name', a.release_year AS 'Year Released'
FROM bands b
JOIN albums a ON b.id = a.band_id
WHERE a.release_year > 2000;


SELECT AVG(release_year) AS 'Average Release Year' FROM albums;

SELECT band_id, COUNT(band_id) FROM albums
GROUP BY band_id;


SELECT b.name AS Band_Name, COUNT(a.id) AS num_of_albums
FROM bands AS b
LEFT JOIN albums AS a ON b.id = a.band_id
WHERE b.name = 'Duece'
GROUP BY b.id
HAVING num_of_albums >= 1;





        
